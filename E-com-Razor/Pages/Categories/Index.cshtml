 @page
@model E_com_Razor.Pages.Categories.IndexModel


<div>
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">CategoryList</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/categories/create"   class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Category </a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th>CategoryName</th>
                <th>DisplayOrder</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categorielist.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>  @obj.Name</td>
                    <td>  @obj.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-page="/categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square text-center"></i>Edit</a>
                            <a asp-page="/categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

